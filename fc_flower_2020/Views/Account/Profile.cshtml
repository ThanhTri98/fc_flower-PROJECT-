
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/LayoutMain.cshtml";
}
    <div class="my_account_page_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="create_account">
                        <h2>TRANG CÁ NHÂN</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="new_customer">
                        <h3>Thông tin cá nhân</h3>
                        @{MyDataBase.TaiKhoan taiKhoan = Session["TAIKHOAN"] as MyDataBase.TaiKhoan;}
                        <form action="#">
                            <ul class="register_form">
                                <li>Họ tên<span>*</span></li>
                                <li>
                                    <div class="email_address">
                                        <input type="text" class="email_test"  value="@taiKhoan.ho_ten"/>
                                    </div>
                                </li>
                                
                                <li>Giới tính<span>*</span></li>
                                <li>
                                    <div class="email_address">
                                        <input type="text" class="password" value="@taiKhoan.gioi_tinh"/>
                                    </div>
                                </li>
                                <li>Địa chỉ<span>*</span></li>
                                <li>
                                    <div class="email_address">
                                        <input type="text" class="password" value="@taiKhoan.dia_chi"/>
                                    </div>
                                </li>
                                <li>Email<span>*</span></li>
                                <li>
                                    <div class="email_address">
                                        <input type="text" class="password" value="@taiKhoan.email"/>
                                    </div>
                                </li>
                                <li>Số điện thoại<span>*</span></li>
                                <li>
                                    <div class="email_address">
                                        <input type="text" class="password" value="@taiKhoan.so_dien_thoai"/>
                                    </div>
                                </li>
                                <li>
                                    <h2><span>*</span>Email đã có người sử dụng!!!</h2>
                                </li>
                            </ul>
                            <div class="create_button_area">
                                <button type="submit" class="create_button">
                                    Cập nhật
                                </button>
                            </div>
                        </form>

                    </div>

                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="new_customer">
                        <h3>Đổi mật khẩu</h3>
                        <form action="#">
                            <ul class="register_form">
                                <li>Mật khẩu hiện tại<span>*</span></li>
                                <li>
                                    <div class="email_address">
                                        <input type="text" class="email_test" />
                                    </div>
                                </li>
                                <li>Mật khẩu mới<span>*</span></li>
                                <li>
                                    <div class="email_address">
                                        <input type="text" class="password" />
                                    </div>
                                </li>
                                <li>Xác nhận mật khẩu<span>*</span></li>
                                <li>
                                    <div class="email_address">
                                        <input type="text" class="password" />
                                    </div>
                                </li>
                                <li>
                                    <h2><span>*</span>Tài khoản hoặc mật khẩu không chính xác!!!</h2>
                                </li>
                            </ul>
                            <div class="create_button_area">
                                <button type="submit" class="create_button">
                                    Đổi mật khẩu
                                </button>
                            </div>
                        </form>


                    </div>

                </div>
            </div>
        </div>
    </div>

