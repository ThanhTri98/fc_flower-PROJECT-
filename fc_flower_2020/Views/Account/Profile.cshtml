
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/LayoutMain.cshtml";
}
    <div class="my_account_page_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="create_account">
                        <h2>TRANG CÁ NHÂN</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="new_customer">
                        <h3>Thông tin cá nhân</h3>
                        @{MyDataBase.TaiKhoan taiKhoan = Session["TAIKHOAN"] as MyDataBase.TaiKhoan;}
                      
                            <ul class="register_form">
                                <li>Họ tên<span>*</span></li>
                                <li>
                                    <div class="email_address">
                                        <input id="prof-fullname" type="text" class="email_test"  value="@taiKhoan.ho_ten"/>
                                    </div>
                                </li>
                                
                                <li>Giới tính<span>*</span></li>
                                <li>
                                    <div class="email_address">
                                        <input id="prof-gender" type="text" class="password" value="@taiKhoan.gioi_tinh"/>
                                    </div>
                                </li>
                                <li>Địa chỉ<span>*</span></li>
                                <li>
                                    <div class="email_address">
                                        <input id="prof-address" type="text" class="password" value="@taiKhoan.dia_chi"/>
                                    </div>
                                </li>
                                <li>Email<span>*</span><span id="email-warning"></span></li>
                                <li>
                                    <div class="email_address">
                                        <input id="prof-email" type="text" class="password" value="@taiKhoan.email"/>
                                    </div>
                                </li>
                                <li>Số điện thoại<span>*</span><span id="phone-warning"></span></li>
                                <li>
                                    <div class="email_address">
                                        <input id="prof-phone" type="text" class="password" value="@taiKhoan.so_dien_thoai"/>
                                    </div>
                                </li>
                                <li>
                                    <h2 id="update-hidden"><span id="update-warning">*</span></h2>
                                </li>
                            </ul>
                            <div class="create_button_area">
                                <button id="update-info" class="create_button">
                                    Cập nhật
                                </button>
                            </div>
                    

                    </div>

                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="new_customer">
                        <h3>Đổi mật khẩu</h3>
                            <ul class="register_form">
                                <li>Mật khẩu hiện tại<span>*</span><span id="cur-pass-warning"></span></li>
                                <li>
                                    <div class="email_address">
                                        <input id="cur-pass" type="password" class="email_test" />
                                    </div>
                                </li>
                                <li>Mật khẩu mới<span>*</span><span id="new-pass-warning"></span></li>
                                <li>
                                    <div class="email_address">
                                        <input id="new-pass" type="password" class="password" />
                                    </div>
                                </li>
                                <li>Xác nhận mật khẩu<span>*</span><span id="retype-pass-warning"></span></li>
                                <li>
                                    <div class="email_address">
                                        <input id="retype-pass" type="password" class="password" />
                                    </div>
                                </li>
                                <li>
                                    <h2 id="change-pass-hidden"><span id="change-pass-warning">*</span></h2>
                                </li>
                            </ul>
                            <div class="create_button_area">
                                <button id="change-password" class="create_button">
                                    Đổi mật khẩu
                                </button>
                            </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="~/Assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/Assets/js/sendDataAjax/profile.js"></script>


