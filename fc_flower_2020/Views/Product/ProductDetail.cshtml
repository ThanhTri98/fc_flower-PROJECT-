@using fc_flower_2020.Models
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/LayoutMain.cshtml";
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcrumb-single breadcrumb_top">
                    <ul id="breadcrumbs">
                        <li><a href=""><i class="fa fa-home"></i>TRANG CHỦ</a></li>
                        <li><span>I</span></li>
                        <li>HOA</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End breadcrumbs area -->
<!-- Start preview Product details area -->
<div class="blog_single_view_area">
    <div class="container">
        <div class="row">

            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                <div class="my_tabs" style="border: 1px solid #a49c9c;">
                    <div class="tab-content tab_content_style">
                        <div class="tab-pane fade in active">
                            <div class="blog_tabs" style="padding: 15px;">
                                <a class="fancybox" href="~/Assets/img@(Model.hinh_anh)" data-fancybox-group="gallery"
                                   title="@Model.tieu_de">
                                    <img src="~/Assets/img@(Model.hinh_anh)"
                                         alt="" />
                                </a>
                            </div>
                        </div>

                    </div>
                    <div class="product-bottom">
                        <div class="maSP">
                            Mã SP: <div>&nbsp;@Model.ma_hoa</div>
                        </div>
                        <div class="line">
                            <div></div>
                        </div>
                        <div class="giaCu">
                            Giá cũ:&nbsp; <div>@Utils.toCurrency((int)Model.gia_cu)</div>
                        </div>
                        <div class="giaMoi">
                            Giá mới:&nbsp; <div>@Utils.toCurrency((int)Model.gia_moi)</div>
                        </div>
                        <p style="  font-size: 11px;">(Giá đã bao gồm 10% VAT)</p>
                        <div class="add-to-cart">
                            <input type="hidden" class="msp-ajax" value="@Model.ma_hoa">
                            <button type="button" title="Add to Cart" class="cart_button add-cart-flower">
                                <span>
                                    Thêm vào giỏ hàng
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12 col-xs-12 r_item">
                <div class="blog_product_details">
                    <h2 class="blog_heading"><a>@(Model.tieu_de)</a></h2>

                    <div class="pricing_rate">
                        <p class="blog_texts">
                            @Model.mo_ta
                        </p>
                    </div>

                </div>
                <div id="ctl00_cphContent_ucItemDetails_pnlLimited" class="sub_desc even">

                    <h4>Lưu ý: Sản phẩm chỉ có ở Hồ Chí Minh và Hà Nội</h4>
                    <p>Sản phẩm bạn đang chọn là sản phẩm được thiết kế đặc biệt!</p>
                    <p>
                        Hiện nay, FC-Flower.com chỉ thử nghiệm cung cấp cho thị trường <strong>
                            Tp. Hồ Chí Minh và
                            Tp. Hà Nội
                        </strong>
                    </p>

                </div>
                <ul class="benefit">
                    <li>Tặng banner, thiệp (trị giá 20.000đ) miễn phí</li>
                    <li>Giảm ngay 20.000đ khi Bạn tạo đơn hàng online</li>
                    <li>
                        Giảm tiếp 3% cho đơn hàng Bạn tạo ONLINE&nbsp;lần thứ 2, 5% cho đơn hàng Bạn&nbsp;tạo ONLINE
                        lần thứ 6 và 10% cho đơn hàng Bạn&nbsp;tạo&nbsp;ONLINE&nbsp;lần thứ 12&nbsp;<em>
                            (Chỉ áp dụng
                            tại Tp. HCM)
                        </em>
                    </li>
                    <li>Giao miễn phí trong nội thành 63/63 tỉnh</li>
                    <li>Giao gấp trong vòng 2 giờ</li>
                    <li>Cam kết 100% hoàn lại tiền nếu Bạn không hài lòng</li>
                    <li>Cam kết hoa tươi trên 3 ngày</li>
                </ul>
                <ul class="social">
                    <li>
                        <a id="ctl00_cphContent_ucItemDetails_hplFacebook" class="fb" title="Facebook"
                           href="#">Facebook</a>
                    </li>
                    <li>
                        <a id="ctl00_cphContent_ucItemDetails_hplTwitter" class="tw" title="Twitter"
                           href="#">Twitter</a>
                    </li>
                    <li>
                        <a id="ctl00_cphContent_ucItemDetails_hplGoogle" class="g" title="Google +" href="#">
                            Google
                            +
                        </a>
                    </li>
                </ul>
            </div>
            <div id="content" class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                <div class="rt">
                    <div class="t">
                        <div class="order">
                            <a id="ctl00_cphContent_ucLargeOrder_hplLargeOrder" title="Đặt hoa số lượng lớn">
                                <img id="ctl00_cphContent_ucLargeOrder_imgLargeOrder"
                                     alt="Đặt hoa số lượng lớn" title="Đặt hoa số lượng lớn"
                                     src="~/Assets/img//dat-hoa-so-luong-lon.png" style="border-width:0px;">
                            </a>
                        </div>
                        <div class="discount">
                            <h4>
                                Giảm 20.000đ
                            </h4>
                            <span>
                                Nhằm khuyến khích mọi người quen sử dụng website trong việc giao dịch thương mại
                                điện tử, Chúng tôi tặng cho mỗi đơn hàng 20.000đ nều bạn mua hoa trực tiếp từ
                                webiste.
                            </span>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
<!-- End preview Product details area -->
<!-- Start upsell products area -->
<div class="upsell_products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="feature_text feature_upsell">
                    <h4>Sản Phẩm Tương Tự</h4>
                </div>
                <div class="row">
                    <div class="upsell_product_list">
                        @{ List<MyDataBase.Hoa> hoaCungLoais = (List<MyDataBase.Hoa>)ViewBag.CungLoai;}
                        @foreach (MyDataBase.Hoa hoa in hoaCungLoais)
                        {
                            <div class="col-lg-3">
                                <div class="single_upsell">
                                    <a href="/chi-tiet-san-pham/@hoa.ma_hoa"><img src="~/Assets/img@(hoa.hinh_anh)" alt="" /></a>
                                    <div class="upsell_details">
                                        <div class="title"><a href="">@hoa.tieu_de</a></div>
                                        <div class="price">
                                            <span class="regular_price">@Utils.toCurrency((int)hoa.gia_cu)</span>
                                            <span class="popular_price">@Utils.toCurrency((int)hoa.gia_moi)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End upsell products area -->
<!-- Start Related products area -->
<div class="related_products_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="feature_text feature_upsell">
                    <h4>Sản Phẩm Đồng Giá</h4>
                </div>
                <div class="row">
                    <div class="upsell_product_list">
                        @{ List<MyDataBase.Hoa> hoaDongGias = (List<MyDataBase.Hoa>)ViewBag.DongGia;}
                        @foreach (MyDataBase.Hoa hoa in hoaDongGias)
                        {
                            <div class="col-lg-3">
                                <div class="single_upsell">
                                    <a href="/chi-tiet-san-pham/@hoa.ma_hoa"><img src="~/Assets/img@(hoa.hinh_anh)" alt="" /></a>
                                    <div class="upsell_details">
                                        <div class="title"><a href="">@hoa.tieu_de</a></div>
                                        <div class="price">
                                            <span class="regular_price">@Utils.toCurrency((int)hoa.gia_cu)</span>
                                            <span class="popular_price">@Utils.toCurrency((int)hoa.gia_moi)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

