@using MyDataBase
@using fc_flower_2020.Models
@{
    ViewBag.Title = "GiftHome";
    Layout = "~/Views/Shared/LayoutMain.cshtml";
}
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcrumb-single breadcrumb_top">
                    <ul id="breadcrumbs">
                        <li><a href=""><i class="fa fa-home"></i>TRANG CHỦ</a></li>
                        <li><span>I</span></li>
                        <li><a href="/qua-tang-kem">QUÀ TẶNG KÈM</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End breadcrumbs area -->
<!-- Start preview Product details area -->
<div class="blog_single_view_area">
    <div class="container">
        <div class="row">
            <div id="left" class="col-lg-9 col-md-6 col-sm-12 col-xs-12 r_item">
                @{ List<List<QuaTangKem>> quaTangKems = Model as List<List<QuaTangKem>>;
                    List<string[]> list = ViewBag.LIST as List<string[]>; int current = 0;}
                @foreach (List<QuaTangKem> qtks in quaTangKems)
                {
                    <div class="gift-title">
                        <div class="col-lg-12">
                            <div class="title-margin"><a href="/qua-tang-kem/@list[current][0]">@list[current++][1]</a></div>
                        </div>
                    </div>

                    <div class="row product-margin">
                        <div class="col-lg-12">
                            @foreach (QuaTangKem qtk in qtks)
                            {
                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="product_list">
                                    <div class="single_product">
                                        <a class="gift"><img src="~/@(qtk.hinh_anh)" alt="" /></a>
                                        <div class="product_details">
                                            <div class="title">@qtk.ten_qua</div>
                                            <div class="price">
                                                <span class="popular_price">@Utils.toCurrency((int)qtk.gia)</span>
                                            </div>
                                        </div>
                                        <div class="product_detail">
                                            <div class="product_button">
                                                <div class="cart_details">
                                                    <a href="cart.html" target="blank">Thêm vào giỏ hàng</a>
                                                </div>
                                            </div>
                                        </div>
                                        <span id="ctl00_cphContent_ucKeywordItems_ucItems_rptItems_ctl03_lblNew"
                                              class="ibadge inew"></span>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>

                }
            </div>
            <!-- Loai qua tang -->
            <div id="content" class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                <div id="top-rt">
                    <h3 class="title-rt">QUÀ TẶNG KÈM</h3>
                    <ul>

                        @foreach (string[] s in list)
                        {
                            <li><a href="/qua-tang-kem/@s[0]">@s[1]</a></li>
                        }

                    </ul>
                </div>
                <div class="rt">
                    <div class="t">
                        <div class="order">
                            <a id="ctl00_cphContent_ucLargeOrder_hplLargeOrder" title="Đặt hoa số lượng lớn"
                               href="#">
                                <img id="ctl00_cphContent_ucLargeOrder_imgLargeOrder"
                                     alt="Đặt hoa số lượng lớn" title="Đặt hoa số lượng lớn"
                                     src="~/Assets/img/dat-hoa-so-luong-lon.png" style="border-width:0px;">
                            </a>
                        </div>
                        <div class="discount">
                            <h4>
                                Giảm 20.000đ
                            </h4>
                            <span>
                                Nhằm khuyến khích mọi người quen sử dụng website trong việc giao dịch thương mại
                                điện tử, Chúng tôi tặng cho mỗi đơn hàng 20.000đ nều bạn mua hoa trực tiếp từ
                                webiste.
                            </span>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>
</div>

